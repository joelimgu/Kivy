#:kivy 1.0.9
<ScreenManager>
    MenuScreen:
    MainScreen:

<RoundedButton@Button>:
    radius: 0
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.radius,]

<MainScreen>


<MenuScreen>
    button:btn
    FloatLayout:
        size: root.width, root.height
        GridLayout:
            cols:3
            RoundedButton:
                on_press: root.btn_click()
                id: btn
                radius: 200
                pos_hint: 0.5,0.5
                size: 300, 300


